<Window x:Class="WpfPracticaGarate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPracticaGarate"
        mc:Ignorable="d"
        Title="Sistema De Gestion del Estudiante" Height="450" Width="800" Icon="/ISP HD2 (1).png" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.ColumnSpan="2" Height="60" VerticalAlignment="Center" Fill="#FFE6ECF1"/>
            <Image Grid.Column="0" Height="95" Width="95" Source="/ISP HD2 (1).png" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
            <Label Grid.Column="1" Content="Sistema De Gestion del Estudiante" Margin="118,0,0,0" VerticalAlignment="Center" FontWeight="Bold" FontSize="22" HorizontalAlignment="Left"/>
        </Grid>
        <Button HorizontalAlignment="Left" Margin="45,28,0,0" Grid.Row="1" VerticalAlignment="Top" Height="95" Width="155" FontWeight="Bold" FontSize="20" Background="#FF1B1B1B"
                BorderThickness="0"  >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
            </Button.Resources>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Height="60" Width="60" Source="/student-person-3-svgrepo-com (1).png" HorizontalAlignment="Center"/>
                <Label Content="Carrera" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="White" Padding="0" Margin="0" FontWeight="Normal"/>
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Margin="225,28,0,0" Grid.Row="1" VerticalAlignment="Top" Height="95" Width="155" FontWeight="Bold" FontSize="20" Background="#FF1B1B1B"
            BorderThickness="0"  >
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
            </Button.Resources>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Height="60" Width="60" Source="/book-svgrepo-com (1).png" HorizontalAlignment="Center"/>
                <Label Content="Materias" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="White" Padding="0" Margin="0" FontWeight="Normal"/>
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Margin="400,28,0,0" Grid.Row="1" VerticalAlignment="Top" Height="95" Width="155" FontWeight="Bold" FontSize="20" Background="#FF1B1B1B"
            BorderThickness="0"  >
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
            </Button.Resources>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Height="60" Width="60" Source="/documentation-edit-svgrepo-com.png" HorizontalAlignment="Center"/>
                <Label Content="Documentación" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="White" Padding="0" Margin="0" FontWeight="Normal"/>
            </StackPanel>
        </Button>

        <!-- Otros controles pueden ir aquí en la segunda fila -->
    </Grid>
</Window>
